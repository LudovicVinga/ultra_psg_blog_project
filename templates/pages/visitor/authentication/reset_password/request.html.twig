{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block description %}Réinitialisez facilement votre mot de passe pour retrouver l’accès à votre compte en toute sécurité.{% endblock %}

{% block keywords %}réinitialisation mot de passe, mot de passe oublié, changer mot de passe, nouveau mot de passe, récupération mot de passe, réinitialiser, accès compte, sécurité, mot de passe perdu, compte utilisateur, page de réinitialisation{% endblock %}

{% block main %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="text-center mb-3">
        <h1 class="text-danger display-5 fw-bold fst-italic mt-4">REINITIALISATION DU MOT DE PASSE</h1>
        <h4 class="text-primary">Changez votre mot de passe rapidement et en toute sécurité</h4>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 p-4 mx-auto shadow">
                {{ form_start(requestForm) }}
                    <div class="mb-3">
                        <label class="mb-3" for="reset_password_request_form_email">Email</label>
                        <div class="text-danger">
                            {{form_errors(requestForm.email)}}
                        </div>
                        {{ form_widget(requestForm.email, {'attr': {'class':'form-control', 'autofocus':'autofocus'}}) }}
                        <small>Entrez votre email pour recevoir un lien de réinitialisation de votre mot de passe.</small>
                    </div>

                    <div class="mt-3">
                        <button formnovalidate class="btn btn-primary w-100 shadow">Envoyer</button>
                    </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
