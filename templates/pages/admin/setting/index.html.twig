{% extends 'themes/base_admin.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block description %}Gérez et personnalisez vos paramètres pour une expérience optimale. Modifiez vos préférences de compte en toute simplicité.{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Paramètres</h1>

    {% include 'components/alert.html.twig' with {"addMarginTop": "mt-3"} %}

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-hover table-bordered text-center table-dark">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Numéro de téléphone</th>
                    <th>Options</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>{{setting.email}}</td>
                    <td>{{setting.phone}}</td>
                    <td>
                        <a href="{{path('app_admin_setting_edit', {"id":setting.id})}}" class="btn btn-sm btn-primary">Modifier</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}