{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifer cet article{% endblock %}

{% block description %}Modifiez facilement un article. Organisez vos contenus en quelques clics et gérez votre site plus efficacement dès maintenant{% endblock %}

{% block jQuery %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block select2 %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
$(document).ready(function() {
    $('#admin_post_form_tags').select2();
    });
</script>
{% endblock %}    

{% block main %}
    <h1 class="text-center my-4 display-5">Modification de: '{{post.title}}'</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto">
                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="admin_post_form_title">Titre</label>
                        <div class="text-danger">{{ form_errors(form.title) }}</div>
                        {{ form_widget(form.title, {'attr': {'class':'form-control', 'autofocus':'autofocus'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_category">Catégorie</label>
                        <div class="text-danger">{{ form_errors(form.category) }}</div>
                        {{ form_widget(form.category, {'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_category">Tags</label>
                        <div class="text-danger">{{form_errors(form.tags)}}</div>
                        {{form_widget(form.tags, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_description">Description</label>
                        <div class="text-danger">{{ form_errors(form.description) }}</div>
                        {{ form_widget(form.description, {'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_keywords">Mots clés</label>
                        <div class="text-danger">{{ form_errors(form.keywords) }}</div>
                        {{ form_widget(form.keywords, {'attr': {'class':'form-control'}}) }}
                    </div>
                    <div class="mb-3 row">
                        <div class="col-md-6 text-center">
                            {% if post.image %}
                            <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}" alt="{{ post.title }}">
                            {% else %}
                            <span>Pas d'image existante</span>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <label for="admin_post_form_imageFile_file">Selectionnez une nouvelle image</label>
                            <div class="text-danger">{{ form_errors(form.imageFile) }}</div>
                            {{ form_widget(form.imageFile, {'attr': {'class':'form-control mb-4'}}) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_content">Contenu</label>
                        <div class="text-danger">{{ form_errors(form.content) }}</div>
                        {{ form_widget(form.content, {'attr': {'class':'form-control', 'rows':10}}) }}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="btn btn-dark" value="Sauvegarder">
                    </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}