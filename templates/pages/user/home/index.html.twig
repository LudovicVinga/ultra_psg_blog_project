{% extends "themes/base_user.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block description %}Découvrez votre espace utilisateur personnalisé : gérez facilement vos informations, accédez à vos services et profitez d’une expérience sur mesure.{% endblock %}

{% block keywords %}espace utilisateur, compte utilisateur, tableau de bord, gestion compte, profil personnel, paramètres utilisateur, informations personnelles, connexion compte{% endblock %}

{% block main %}

    {% include 'components/welcomeTitle.twig' %}

    <div class="container my-5 text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4 mb-4">
                    <div class="card-header bg-primary text-white border-0 rounded-top-4 text-center fw-bold fs-5 text-uppercase">
                        Tous vos commentaires
                    </div>
                    <div class="card-body d-flex flex-column align-items-center p-4">
                        <p class="card-text display-5 fw-semibold text-primary mb-0">
                        {{ app.user.comments|length }}
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center rounded-bottom-4">
                        <a href="{{ path('app_visitor_news') }}" class="btn btn-primary rounded-pill px-4">Commenter les news</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4 mb-4">
                    <div class="card-header bg-primary text-white border-0 rounded-top-4 text-center fw-bold fs-5 text-uppercase">
                        Tous vos likes
                    </div>
                    <div class="card-body d-flex flex-column align-items-center p-4">
                        <p class="card-text display-5 fw-semibold text-primary mb-0">
                        {{ app.user.likes|length }}
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center rounded-bottom-4">
                        <a href="{{ path('app_visitor_news') }}" class="btn btn-primary rounded-pill px-4">Liker les news</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}